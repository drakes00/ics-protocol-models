rule Send_A:
    let m = ~m
    in
    [ Fr(~m),  !Ltk('sign', $A, keyA) ]
    --[ Send($A, $B, m) ]->
    [ Out( sign(m, keyA)) ]

rule Recv_B:
    [!Ltk('sign', $A, keyA), In(sign(m, keyA)) ]
    --[ Recv($A, $B, m) ]->
    [  ]


axiom Equality:
    "All x y #i. Eq(x, y) @ #i ==> x = y"


axiom Inequality:
    "All x #i. Neq(x, x) @ #i ==> F"

